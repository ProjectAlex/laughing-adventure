<%= provide(:title,"Sign Up") %>
 <h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification   class: 'alert alert-danger alert-dismissable' %>
  <%= #display_base_errors resource 
  %>
  <%= f.input :name, :autofocus => true,:error_html => { :class => 'has-error'} %>
  <%= f.input :email, :required => true ,:error_html => { :class => 'has-error'}%>
  <%= f.input :password, :required => true,:error_html => { :class => 'has-error'} %>
  <%= f.input :password_confirmation, :required => true,:error_html => { :class => 'has-error'} %>
  <%= f.input :date_of_birth,:required => true,start_year: Date.today.year - 90 ,end_year: Date.today.year - 12,:error_html => { :class => 'has-error'}%>
  <%= f.button :submit, 'Sign up', :class => 'btn btn-success' %>
<% end %>

<%= render "devise/shared/links" %>
